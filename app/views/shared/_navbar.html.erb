<div class="container">
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo.png" %>
      <% end %>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>


    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item dropdown">
          <a class="btn btn-outline-secondary btn-round btn-locale" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Langue">
            <%= I18n.locale %>
          </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "FR", "/fr", class: "nav-link" %>
              <%= link_to "NL", "/nl", class: "nav-link" %>
              <%= link_to "EN", "/en", class: "nav-link" %>
            </div>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
          </li>
          <li class="nav-item dropdown">
            <a class="btn btn-outline-secondary btn-round" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title=I18n.t('home.myaccount')>
            <i class="fas fa-user fa-fw"></i>
          </a>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to I18n.t('home.logout'), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
            <% if current_user.admin == true %>
            <li class="nav-item dropdown">
              <a href="#" class="btn btn-primary btn-round" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Admin">
                <i class="fas fa-tools fa-fw fa-inverse"></i>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Contenus", "/admin/contents", class: "dropdown-item" %>
            </div>
            </li>
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path , class: "btn btn-outline-secondary btn-round " do %>
              <i class="far fa-user fa-fw"></i>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>


