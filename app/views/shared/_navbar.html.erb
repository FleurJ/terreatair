<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png" %>
    <% end %>
<!-- BURGER BUTTON MOBILE -->
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
<!-- END -->

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <!-- TOPICS MENU -->
      <li class="nav-item">
        <%= link_to I18n.t('home.poject'), "/#projet", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.animations'), "/#animations", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.formations'), "/#formations", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.sponsorship'), "/#parrainage", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.companies'), "/#entreprises", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.products'), "/#produits", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.health'), "/#bien-etre", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.volunteering'), "/#volontariat", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.gallery'), "#galerie", class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to I18n.t('home.contact'), "/#contact", class: "nav-link" %>
      </li>
      <!-- END TOPICS MENU -->
      <li class="nav-item dropdown">
        <!-- LANGUAGES MENU -->
        <a class="btn btn-outline-secondary btn-round btn-locale" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title="Langue">
          <%= I18n.locale %>
        </a>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "FR", "/fr", class: "dropdown-item" %>
            <%= link_to "NL", "/nl", class: "dropdown-item" %>
            <%= link_to "EN", "/en", class: "dropdown-item" %>
          </div>
      </li>
      <!-- END LANGUAGES MENU -->
      <!-- USER MENU -->
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <a class="btn btn-outline-secondary btn-round" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" title=I18n.t('home.myaccount')>
            <i class="fas fa-user fa-fw"></i>
          </a>
        </li>
        <li class="nav-item dropdown">
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to I18n.t('home.logout'), destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.admin == true %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
              <%= link_to "Contenus", "/admin/contents", class: "dropdown-item" %>
            </div>
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path , class: "btn btn-outline-secondary btn-round " do %>
            <i class="far fa-user fa-fw"></i>
          <% end %>
        </li>
      <% end %>
      <!-- END USER MENU -->
    </ul>
  </div>
</div>
