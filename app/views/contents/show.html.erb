<div class="container-content-title">
<div class="show-banner" style="background-image: url('<%= cl_image_path @content.image.key %>'); filter: grayscale(1);">
</div>
 <div class="container content-title">
  <h1 class="content-title"><%= @content.title %></h1>
 </div>
</div>

<div class="container">
<!--   <p><%= @content.status %></p> -->
<!--   <p><%= cl_image_tag @content.image.key %></p> -->
  <p class="teaser"><%= @content.teaser %></p>
  <p><%= simple_format(@content.body.html_safe) %></p>
  <p><%= @content.links %></p>
<!--   <p>Ecrit par <i><%= @content.user.firstname %></i>, le <%= @content.created_at %></p> -->
<hr>
  <% if user_signed_in? %>
    <% if current_user.admin == true %>
      <%= button_to "Supprimer", content_path(@content),
                  method: :delete,
                  data: { confirm: "Veuillez confirmer la suppression !" },
                 :id => "delete", class:"btn btn-danger" %>
    <% end %>
  <% end %>

</div>


