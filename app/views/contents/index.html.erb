<div class="container">
  <% @contents.each do |c| %>
  <div id="<%= c.id%>">
    <div class="row align-items-center justify-content-between">
      <div class="col-4">
        <h1><%= c.title %></h1>
        <% if c.order != 1 %>
          <p class="home">
            <%= c.teaser %> &nbsp; <%= link_to "+", content_path(c.id), class:"lire-plus" %>
          </p>
        <% end %>
      </div>
      <div class="col-6 img-parent">
        <div class="img-custom">
          <%= cl_image_tag c.image.key %>
          <div class="img-hexagone"><%= image_url("masque-hexagone.png") %></div>
        </div>
      </div>
    </div>
  </div>
    <% end %>
</div>
