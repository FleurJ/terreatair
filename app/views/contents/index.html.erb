<div class="container">
  <% @contents.each do |c| %>
    <div class="row align-items-center">
      <div class="col-4">
        <h1><%= c.title %></h1>
        <% if c.order != 1 %>
          <p class="home">
            <%= c.teaser %> &nbsp; <%= link_to "+", content_path(c.id), class:"lire-plus" %>
          </p>
        <% end %>
      </div>
      <div class="col-8">
        <%= cl_image_tag c.image.key %>
      </div>
    <% end %>
    </div>
</div>
