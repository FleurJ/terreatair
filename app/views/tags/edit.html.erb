<div class="container margin-top">
  <h1>Modifier <em>@tag.title</em></h1>
  <hr>
  <%= simple_form_for @tag, url: tag_path, method: :patch do |c| %>
  <%= c.input :title, label: 'Titre' %>
  <%= c.input :description, label: 'Description' %>
  <%= c.submit "Modifier", class: "btn btn-primary" %>
  <% end %>
</div>
